print("Saving Ecuador's mask as a .csv file...")
FileOUT_csv = Git_repo & "/" & DirOUT  & "/" & FileName_grib_csv & ".csv"
Emask_csv = file(FileOUT_csv)
write(Emask_csv, "lat,lon,region_code", newline)
for i = 1 to count(Emask_nonzeros) do
    ind_Emask = Emask_nonzeros[i]
    append(Emask_csv, round(lats[ind_Emask],2), ",", round(lons_converted_vec[ind_Emask],2), ",", vals_regions[ind_Emask], newline)
